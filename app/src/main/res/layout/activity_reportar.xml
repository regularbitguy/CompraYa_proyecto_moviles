<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".ReportarActivity">

    <!-- ðŸ”¹ BARRA SUPERIOR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/back"
            android:background="@drawable/circulo"
            android:scaleType="centerInside"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reportar Usuario"
            android:textColor="#1E5631"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- ðŸ”¹ CONTENIDO SCROLLABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ðŸ”¸ InformaciÃ³n del vendedor -->
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="18dp"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgVendedor"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circulo"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtVendedor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan PÃ©rez"
                        android:textColor="#111"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="juanperez"
                        android:textColor="#777"
                        android:textSize="13sp" />

                    <RatingBar
                        android:id="@+id/ratingVendedor"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:numStars="5"
                        android:progressTint="#FFD700"
                        android:rating="4"
                        android:stepSize="1" />
                </LinearLayout>
            </LinearLayout>

            <!-- ðŸ”¸ Datos de contacto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RazÃ³n:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtRazon"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/caja_texto"
                android:enabled="false"
                android:hint="Razon del reporte"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/caja_texto"
                android:enabled="false"
                android:hint="Max 50 palabras"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnEnviarReporte"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#1E5631"
                android:text="Enviar Reporte"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ BARRA INFERIOR -->
    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>