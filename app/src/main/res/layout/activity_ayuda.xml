<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".AyudaActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="3dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circulo"
            android:padding="8dp"
            android:src="@drawable/back"
            android:contentDescription="Volver"
            app:tint="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Ayuda"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Preguntas frecuentes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preguntas Frecuentes"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="#2E7D32" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="• ¿Cómo puedo publicar un producto?\n• ¿Cómo elimino un artículo?\n• ¿Dónde veo mis compras?\n• ¿Cómo contacto con el vendedor?\n• ¿Cómo cambio mi contraseña?"
                android:fontFamily="@font/plus_jakarta_sans"
                android:textSize="15sp"
                android:textColor="#444" />

            <!-- Sección de contacto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Contáctanos"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="#2E7D32" />

            <!-- Servicio Telefónico -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/contend_ayuda"
                android:paddingHorizontal="15dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/telefono"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Servicio Telefónico"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- WhatsApp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/contend_ayuda"
                android:paddingHorizontal="15dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/whatsapp"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="WhatsApp"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Website -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/contend_ayuda"
                android:paddingHorizontal="15dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/website"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Website"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
