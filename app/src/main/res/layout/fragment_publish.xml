<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/btnRetroceder2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:contentDescription="Retroceder"
                    android:src="@drawable/img_retroceder2"
                    />

                <TextView
                    android:id="@+id/tvMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Vender producto"
                    android:textColor="#114232"
                    android:textSize="24sp"
                    android:paddingLeft="40dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgProducto"
                            android:layout_width="300dp"
                            android:layout_height="250dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/bg_categoria"
                            android:contentDescription="Agregar fotos"
                            android:paddingTop="10dp"
                            android:padding="100dp"
                            android:src="@drawable/img_agregarfoto" />

                        <EditText
                            android:id="@+id/etTitulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/bg_categoria"
                            android:fontFamily="@font/plus_jakarta_sans_medium"
                            android:hint="Título"
                            android:padding="15dp"
                            android:textColor="#040404" />

                        <EditText
                            android:id="@+id/etPrecio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/bg_categoria"
                            android:fontFamily="@font/plus_jakarta_sans_medium"
                            android:hint="Precio"
                            android:inputType="numberDecimal"
                            android:padding="15dp"
                            android:textColor="#040404" />

                        <EditText
                            android:id="@+id/etCategoria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/bg_categoria"
                            android:fontFamily="@font/plus_jakarta_sans_medium"
                            android:hint="Categoría"
                            android:padding="15dp"
                            android:textColor="#040404" />

                        <EditText
                            android:id="@+id/etEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/bg_categoria"
                            android:fontFamily="@font/plus_jakarta_sans_medium"
                            android:hint="Estado"
                            android:padding="15dp"
                            android:textColor="#040404" />

                        <EditText
                            android:id="@+id/etDescripcion"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/bg_categoria"
                            android:fontFamily="@font/plus_jakarta_sans_medium"
                            android:gravity="top"
                            android:hint="Descripción"
                            android:padding="15dp"
                            android:textColor="#040404" />

                        <Button
                            android:id="@+id/btnPublicar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="0dp"
                            android:backgroundTint="#114232"
                            android:fontFamily="@font/plus_jakarta_sans_semibold"
                            android:padding="15dp"
                            android:text="Publicar"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
    </LinearLayout>