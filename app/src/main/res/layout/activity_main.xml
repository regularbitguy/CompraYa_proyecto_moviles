<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <!-- App bar personalizado en la parte superior -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@android:color/transparent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circulo"
            android:src="@drawable/back"
            android:contentDescription="Atrás"
            android:elevation="4dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_marginEnd="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circulo"
                android:src="@drawable/search"
                android:contentDescription="Buscar"
                android:elevation="4dp"/>

            <ImageButton
                android:id="@+id/btnChat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circulo"
                android:src="@drawable/message"
                android:scaleType="fitCenter"
                android:contentDescription="Chat"
                android:elevation="4dp"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Contenido principal (scrollable) -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="88dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tarjeta blanca con sombra parecida al diseño -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtNombreProducto"
                        android:text="Teclado Logitech Gamer Pro G"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1B1B1B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Carousel (simple ImageView aquí; puedes usar ViewPager2 para varias imágenes) -->
                    <ImageView
                        android:id="@+id/imgProducto"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/teclado"
                        android:contentDescription="Imagen producto"/>

                    <!-- Stock / Estado / Precio -->
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtStock"
                                android:text="Stock: 5"
                                android:textSize="13sp"
                                android:textColor="#555"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txtEstado"
                                android:text="Estado: Casi Nuevo"
                                android:textSize="13sp"
                                android:textColor="#555"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtPrecio"
                            android:text="S/. 250"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1E5631"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Vendedor -->
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgVendedor"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/user"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circulo"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txtVendedor"
                                android:text="Juan Perez"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#111"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/txtUsuario"
                                android:text="jperez26"
                                android:textSize="12sp"
                                android:textColor="#777"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Descripción -->
                    <TextView
                        android:layout_marginTop="12dp"
                        android:text="Descripción:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtDescripcion"
                        android:layout_marginTop="6dp"
                        android:text="Descripción del producto..."
                        android:textSize="13sp"
                        android:textColor="#555"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <!-- Botón contact -->
                    <Button
                        android:id="@+id/btnContactar"
                        android:layout_marginTop="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Contactar con proveedor"
                        android:textAllCaps="false"
                        android:backgroundTint="#1E5631"
                        android:textColor="#FFF"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sugerencias -->
            <TextView
                android:layout_marginTop="18dp"
                android:text="Sugerencias para ti"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSugerencias"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="140dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior personalizada -->
    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:elevation="6dp"/>

        <!-- Iconos izquierdo/derecho -->
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/navInicio"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/inicio"
                android:contentDescription="Inicio"/>

            <ImageButton
                android:id="@+id/navDeseos"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lista"
                android:layout_marginHorizontal="20dp"
                android:contentDescription="Deseos"/>

            <!-- espacio para FAB central -->
            <Space
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/navPublicaciones"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/publicaciones"
                android:layout_marginHorizontal="20dp"
                android:contentDescription="Publicaciones"/>

            <ImageButton
                android:id="@+id/navPerfil"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/perfil"
                android:contentDescription="Perfil"/>
        </LinearLayout>

        <!-- FAB central -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/publi"
            android:backgroundTint="@color/black"/>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
