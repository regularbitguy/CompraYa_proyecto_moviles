<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- âœ… SCROLL PRINCIPAL -->
    <!-- Contiene todo el contenido desplazable de la pantalla -->
    <ScrollView
        android:id="@+id/scrollViewHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ðŸŸ© TÃTULO PRINCIPAL -->
            <!-- Texto "MenÃº" -->
            <TextView
                android:id="@+id/tvMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:text="MenÃº"
                android:textColor="#114232"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- ðŸŸ© BARRA DE BÃšSQUEDA Y NOTIFICACIONES -->
            <!-- Contiene Ã­conos de bÃºsqueda y campana -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnBuscar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_item_producto"
                    android:src="@drawable/vector"
                    android:contentDescription="Buscar"
                    android:layout_marginEnd="8dp"
                    app:tint="#114232" />

                <ImageButton
                    android:id="@+id/btnNotificaciones"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_item_producto"
                    android:src="@drawable/image2215"
                    android:contentDescription="Notificaciones"
                    app:tint="#114232" />
            </LinearLayout>

            <!-- ðŸŸ© SECCIÃ“N DE PRODUCTOS RECIENTES -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:text="Productos recientes"
                android:textColor="#114232"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- RecyclerView â†’ mostrarÃ¡ productos horizontales (carrusel) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductosRecientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginBottom="24dp" />

            <!-- ðŸŸ© SECCIÃ“N DE CATEGORÃAS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:text="CategorÃ­as"
                android:textColor="#114232"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- GridLayout â†’ organiza las categorÃ­as en 3 columnas -->
            <GridLayout
                android:id="@+id/gridCategorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:alignmentMode="alignMargins"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- ðŸŽ® CategorÃ­a: Videojuegos -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/img_videojuegos"
                        android:contentDescription="Videojuegos" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:text="Videojuegos"
                        android:textColor="#114232"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ðŸ‘• CategorÃ­a: Prendas -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/img_prendas"
                        android:contentDescription="Prendas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:text="Prendas"
                        android:textColor="#114232"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ðŸ’» CategorÃ­a: ComputaciÃ³n -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/img_computacion"
                        android:contentDescription="ComputaciÃ³n" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:text="ComputaciÃ³n"
                        android:textColor="#114232"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ðŸ’ CategorÃ­a: Accesorios -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/img_accesorios"
                        android:contentDescription="Accesorios" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:text="Accesorios"
                        android:textColor="#114232"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ðŸŽ§ CategorÃ­a: MÃºsica -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/img_musica"
                        android:contentDescription="MÃºsica" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:text="MÃºsica"
                        android:textColor="#114232"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- ðŸ  CategorÃ­a: Inmuebles -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/img_inmuebles"
                        android:contentDescription="Inmuebles" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/plus_jakarta_sans_semibold"
                        android:text="Inmuebles"
                        android:textColor="#114232"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>

            <!-- ðŸŸ© BOTÃ“N VER TODAS LAS CATEGORÃAS -->
            <Button
                android:id="@+id/btnVerTodas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="90dp"
                android:backgroundTint="#114232"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:padding="12dp"
                android:text="Ver todas las categorÃ­as"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

    <!-- âœ… NAVBAR INFERIOR (BottomNavigationView) -->
    <!-- Contiene los Ã­conos: Inicio, Deseados, Publicar, Notificaciones, Perfil -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
