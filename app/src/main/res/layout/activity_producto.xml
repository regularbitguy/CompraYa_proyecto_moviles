<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Producto"
    android:background="#F8F8F8">

    <!-- ðŸ”¹ BARRA SUPERIOR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/back"
            android:background="@drawable/circulo"
            android:scaleType="fitCenter"
            android:padding="12dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/search"
                android:background="@drawable/circulo"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:layout_marginEnd="10dp"/>

            <ImageButton
                android:id="@+id/btnMessage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/message"
                android:background="@drawable/circulo"
                android:scaleType="fitCenter"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ”¹ CONTENIDO SCROLLABLE -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="always"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtNombreProducto"
                android:text="Teclado Logitech Gamer Pro G"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1B1B1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- ImÃ¡genes del producto -->
            <ImageView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/teclado"/>

            <!-- Stock / Estado / Precio -->
            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtStock"
                        android:text="Stock: 5"
                        android:textSize="13sp"
                        android:textColor="#555"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtEstado"
                        android:text="Estado: Casi Nuevo"
                        android:textSize="13sp"
                        android:textColor="#555"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPrecio"
                    android:text="S/. 250"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E5631"/>
            </LinearLayout>

            <!-- Vendedor -->
            <LinearLayout
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgVendedor"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/user"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circulo"
                    android:padding="2dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtVendedor"
                        android:text="Juan Perez"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#111"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtUsuario"
                        android:text="jperez26"
                        android:textSize="12sp"
                        android:textColor="#777"/>
                </LinearLayout>
            </LinearLayout>

            <!-- DescripciÃ³n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="DescripciÃ³n:"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDescripcion"
                android:layout_marginTop="6dp"
                android:text="Teclado mecÃ¡nico gamer con retroiluminaciÃ³n RGB, ideal para juegos competitivos."
                android:textSize="13sp"
                android:textColor="#555"/>

            <!-- BotÃ³n Contactar -->
            <Button
                android:id="@+id/btnContactar"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Contactar con proveedor"
                android:textAllCaps="false"
                android:backgroundTint="#1E5631"
                android:textColor="#FFF"/>

            <!-- Sugerencias -->
            <TextView
                android:layout_marginTop="18dp"
                android:text="Sugerencias para ti"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSugerencias"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="230dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ BARRA INFERIOR FIJA -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:gravity="center"
        android:weightSum="5"
        android:paddingVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ðŸ  Inicio -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navInicio"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/inicio"
                android:contentDescription="Inicio"
                app:tint="#1E5631" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="11sp"
                android:textColor="#1E5631" />
        </LinearLayout>

        <!-- â¤ï¸ Deseados -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navDeseados"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/lista"
                android:contentDescription="Deseados"
                app:tint="#666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deseados"
                android:textSize="11sp"
                android:textColor="#666" />
        </LinearLayout>

        <!-- âž• BotÃ³n central (Publicar) -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/boton_mas"
                android:layout_gravity="center"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/navAgregar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/publi"
                    app:tint="#FFFFFF"
                    android:contentDescription="Publicar" />
            </FrameLayout>
        </LinearLayout>

        <!-- ðŸ—‚ï¸ Mis publicaciones -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navPublicaciones"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/publicaciones"
                android:contentDescription="Mis publicaciones"
                app:tint="#666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis productos"
                android:textSize="11sp"
                android:textColor="#666" />
        </LinearLayout>

        <!-- ðŸ‘¤ Perfil -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/navPerfil"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/perfil"
                android:contentDescription="Perfil"
                app:tint="#666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="11sp"
                android:textColor="#666" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
