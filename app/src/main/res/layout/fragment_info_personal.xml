<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".InfoPersonalFragment">

    <!-- 游댳 BARRA SUPERIOR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/back"
            app:tint="#000000"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informaci칩n personal"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="22sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgUsuario"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/user"
                    android:scaleType="centerCrop"
                    android:padding="3dp"/>

                <TextView
                    android:id="@+id/txtEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:textSize="15sp"
                    android:textColor="#00897B"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/contend_perfil"
                android:layout_marginTop="25dp"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre completo"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etNombreCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/contend_perfil"
                    android:hint="Ingrese su nombre completo"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:paddingHorizontal="10dp"
                    android:textColorHint="#999"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo electr칩nico"
                    android:textSize="14sp"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:textColor="#444"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"

                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/contend_perfil"
                    android:hint="Ingrese su correo"
                    android:textColor="@color/black"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="10dp"
                    android:textColorHint="#999"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etDNI"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/contend_perfil"
                    android:hint="Ingrese su DNI"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:inputType="number"
                    android:maxLength="8"
                    android:paddingHorizontal="10dp"
                    android:textColorHint="#999"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/contend_perfil"
                android:layout_marginTop="20dp"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambiar contrase침a"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etActual"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/contend_perfil"
                    android:hint="Contrase침a actual"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:inputType="textPassword"
                    android:paddingHorizontal="10dp"
                    android:textColorHint="#999"/>

                <EditText
                    android:id="@+id/etNueva"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/contend_perfil"
                    android:hint="Nueva contrase침a"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:paddingHorizontal="10dp"
                    android:textColorHint="#999"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/etConfirmar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/contend_perfil"
                    android:hint="Confirmar nueva contrase침a"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:paddingHorizontal="10dp"
                    android:textColorHint="#999"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#1E5631"
                android:text="Guardar cambios"
                android:fontFamily="@font/plus_jakarta_sans_medium"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
