<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".PerfilVendedorActivity">

    <!-- ðŸ”¹ BARRA SUPERIOR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/back"
            android:background="@drawable/circulo"
            android:scaleType="centerInside"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil del vendedor"
            android:textColor="#1B1B1B"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- ðŸ”¹ CONTENIDO SCROLLABLE -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ðŸ”¸ InformaciÃ³n del vendedor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/imgVendedor"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/user"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circulo"
                    android:padding="2dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/txtVendedor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan PÃ©rez"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111"/>

                    <TextView
                        android:id="@+id/txtUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="juanperez"
                        android:textSize="13sp"
                        android:textColor="#777"/>

                    <RatingBar
                        android:id="@+id/ratingVendedor"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="4"
                        android:layout_marginTop="4dp"
                        android:progressTint="#FFD700"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnReportar"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Reportar"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="13sp"
                    android:backgroundTint="#C62828"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- ðŸ”¸ Datos de contacto -->
            <TextView
                android:text="Nombre completo"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/txtNombreCompleto"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Juan PÃ©rez"
                android:background="@drawable/caja_texto"
                android:enabled="false"
                android:padding="10dp"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Email"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="juanperez@gmail.com"
                android:background="@drawable/caja_texto"
                android:enabled="false"
                android:padding="10dp"
                android:textSize="13sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Contacto"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/txtContacto"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="+51 987 654 321"
                android:background="@drawable/caja_texto"
                android:enabled="false"
                android:padding="10dp"
                android:textSize="13sp"
                android:layout_marginBottom="20dp"/>

            <!-- Productos publicados -->
            <TextView
                android:layout_marginTop="18dp"
                android:text="Productos publicados"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerProductosVendedor"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="230dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ BARRA INFERIOR -->
    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
