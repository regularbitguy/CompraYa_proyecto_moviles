<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/card_item"
    android:layout_marginEnd="12dp"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/imgSugerencia"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/teclado"
        android:background="#EEE"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/txtNombreSugerencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teclado Logitech G213"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#111"/>

    <TextView
        android:id="@+id/txtTipoSugerencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teclado"
        android:fontFamily="@font/plus_jakarta_sans_medium"
        android:textSize="12sp"
        android:textColor="#777"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/txtPrecioSugerencia"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="S/. 250"
            android:textColor="#1E5631"
            android:fontFamily="@font/plus_jakarta_sans_medium"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnAgregarSugerencia"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="+"
            android:textSize="18sp"
            android:backgroundTint="#1E5631"
            android:textColor="#FFF"
            android:padding="0dp"/>
    </LinearLayout>
</LinearLayout>
